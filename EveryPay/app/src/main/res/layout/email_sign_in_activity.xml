<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:layout_marginStart="0dp"
    android:layout_marginLeft="0dp"
    android:layout_marginTop="0dp"
    android:layout_marginEnd="0dp"
    android:layout_marginRight="0dp"
    android:layout_marginBottom="0dp">

    <View
        android:id="@+id/strut2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/welcome"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="0dp"
        android:gravity="bottom"
        android:paddingLeft="20dp"
        android:text="Hi, please sign-in with an email address."
        android:textColor="@color/black"
        android:textSize="30dp" />

    <LinearLayout
        android:id="@+id/email_address_field"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcome"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="0dp"
        android:background="#E4EEFF"
        android:gravity="top"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/email_address_prompt"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:gravity="top"
            android:paddingLeft="20dp"
            android:text="Email address:"
            android:textColor="@color/black"
            android:textSize="25dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:orientation="vertical">

            <EditText
                android:id="@+id/email_address_input"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginRight="20dp"
                android:autofillHints="emailAddress"
                android:background="@drawable/rounded_edit_text"
                android:hint="xxx@seavip.com"
                android:inputType="textEmailAddress"
                android:paddingLeft="25dp"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/email_address_error"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="top"
                android:paddingLeft="20dp"
                android:text="Please enter valid email address."
                android:textColor="@color/black"
                android:textSize="15dp" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/next_button"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/email_address_field"
        android:layout_alignParentEnd="true"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:contentDescription="Next"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="Next"
        android:textColor="@color/white"
        android:textSize="25dp" />


</RelativeLayout>