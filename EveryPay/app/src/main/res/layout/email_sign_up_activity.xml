<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:layout_marginStart="0dp"
    android:layout_marginLeft="0dp"
    android:layout_marginTop="0dp"
    android:layout_marginEnd="0dp"
    android:layout_marginRight="0dp"
    android:layout_marginBottom="0dp">

    <View
        android:id="@+id/strut2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true" />


    <TextView
        android:id="@+id/welcome"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="0dp"
        android:gravity="top"
        android:paddingLeft="20dp"
        android:text="Welcome to sign up for xxx@seavip.com.\nPlease provide username and password."
        android:textColor="@color/black"
        android:textSize="25dp" />

    <LinearLayout
        android:id="@+id/username_field"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcome"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="0dp"
        android:background="#E4EEFF"
        android:gravity="top"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/username_prompt"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:gravity="top"
            android:paddingLeft="20dp"
            android:text="Username:"
            android:textColor="@color/black"
            android:textSize="25dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginRight="20dp"
            android:gravity="top"
            android:orientation="vertical">

            <EditText
                android:id="@+id/username_input"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:autofillHints="password"
                android:background="@drawable/rounded_edit_text"
                android:hint="Seavip"
                android:paddingLeft="20dp"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/username_error"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="top"
                android:paddingLeft="20dp"
                android:text="Please enter your username."
                android:textColor="@color/black"
                android:textSize="15dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/password_field"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/username_field"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="0dp"
        android:background="#E4EEFF"
        android:gravity="top"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/password_prompt"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:gravity="top"
            android:paddingLeft="20dp"
            android:text="Password:"
            android:textColor="@color/black"
            android:textSize="25dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="top"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"

                android:layout_marginEnd="20dp"
                android:background="@drawable/rounded_edit_text"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/password_input"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"

                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="0dp"
                    android:layout_toStartOf="@+id/show_pass_btn"
                    android:autofillHints="password"
                    android:background="@color/TRANSPARENT"
                    android:backgroundTint="@color/TRANSPARENT"
                    android:hint="*******"
                    android:inputType="textPassword"
                    android:textSize="25dp" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/show_pass_btn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="0dp"
                    android:background="#EAEAEA"
                    android:backgroundTint="#EAEAEA"
                    android:contentDescription="Show password"
                    android:foregroundGravity="right"
                    android:onClick="ShowHidePass"
                    android:src="@drawable/show_pass"
                    app:backgroundTint="#EAEAEA"
                    app:fabSize="mini" />
            </RelativeLayout>


            <TextView
                android:id="@+id/password_error"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="top"
                android:paddingLeft="20dp"
                android:text="Please enter your password."
                android:textColor="@color/black"
                android:textSize="15dp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/sign_up_button"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/password_field"
        android:layout_alignParentEnd="true"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#2C2C85"
        android:contentDescription="Next"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="Sign up"
        android:textSize="25dp" />


</RelativeLayout>